@model MvcOnlineTicariOtomasyon.Models.Siniflar.Mesajlar
@{
    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<head>
    <!-- Font Awesome -->
    <link href="~/dist/css/all.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/c9a019f83a.js" crossorigin="anonymous"></script>
    <!-- Ionicons -->

    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link href="~/dist/css/adminlte.min.css" rel="stylesheet" />
    <!-- summernote -->
    <link href="~/dist/css/summernote-bs4.min.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>

<body class="hold-transition sidebar-mini">





    <!-- Content Header (Page header) -->

    <section class="content-header">

        <div class="container-fluid">

            <div class="row mb-2">

                <div class="col-sm-6">

                    <h1>Yeni Mesaj Oluştur</h1>

                </div>



            </div>

        </div><!-- /.container-fluid -->

    </section>

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-3">

                    <a href="~/CariPanel/GelenMesajlar" class="btn btn-primary btn-block mb-3">Gelen Kutusu</a>

                    <div class="card">

                        <div class="card-header">

                            <h3 class="card-title">Klasörler</h3>

                            <div class="card-tools">

                                <button type="button" class="btn btn-tool" data-card-widget="collapse">

                                    <i class="fas fa-minus"></i>

                                </button>

                            </div>

                        </div>

                        <div class="card-body p-0">

                            <ul class="nav nav-pills flex-column">

                                <li class="nav-item active">

                                    <a href="~/CariPanel/GelenMesajlar" class="nav-link">

                                        <i class="fas fa-inbox"></i> Gelen Kutusu

                                        <span class="badge bg-primary float-right">@ViewBag.d1</span>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="~/CariPanel/GidenMesajlar" class="nav-link">

                                        <i class="far fa-envelope"></i> Giden Kutusu
                                        <span class="badge bg-danger float-right">@ViewBag.d2</span>
                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-file-alt"></i> Taslaklar
                                        <span class="badge bg-fuchsia float-right">0</span>
                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="fas fa-filter"></i> Gereksizler

                                        <span class="badge bg-warning float-right">2</span>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                                        <span class="badge bg-gradient-olive float-right">1</span>
                                    </a>

                                </li>

                            </ul>

                        </div>

                        <!-- /.card-body -->

                    </div>

                    <!-- /.card -->

                    <div class="card">

                        <div class="card-header">

                            <h3 class="card-title">Filtreler</h3>

                            <div class="card-tools">

                                <button type="button" class="btn btn-tool" data-card-widget="collapse">

                                    <i class="fas fa-minus"></i>

                                </button>

                            </div>

                        </div>

                        <div class="card-body p-0">

                            <ul class="nav nav-pills flex-column">

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-circle text-danger"></i>

                                        Önemliler

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-circle text-warning"></i> Promosyonlar

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-circle text-primary"></i>

                                        Sosyal Medya Mesajları

                                    </a>

                                </li>

                            </ul>

                        </div>

                        <!-- /.card-body -->

                    </div>

                    <!-- /.card -->

                </div>

                <!-- /.col -->

                <div class="col-md-9">

                    <div class="card card-primary card-outline">

                        <div class="card-header">

                            <h3 class="card-title">Mesaj Yaz</h3>

                        </div>

                        <!-- /.card-header -->
                        <form class="form-group" method="post">
                            <div class="card-body">

                                <div class="form-group">

                                    <input class="form-control" name="Alici" placeholder="Kime:">

                                </div>

                                <div class="form-group">

                                    <input class="form-control" name="Konu" placeholder="Konu:">

                                </div>

                                <div class="form-group">

                                    <textarea id="compose-textarea" name="Icerik" class="form-control" style="height: 300px"></textarea>

                                </div>
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                            </div>
                        </form>

                        <!-- /.card-body -->

                        <div class="card-footer">

                            <div class="float-right">

                                <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslak</button>

                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>

                            </div>

                            <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Vazgeç</button>

                        </div>

                        <!-- /.card-footer -->

                    </div>

                    <!-- /.card -->

                </div>

                <!-- /.col -->

            </div>

            <!-- /.row -->

        </div><!-- /.container-fluid -->

    </section>

    <script src="~/dist/js/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/dist/js/adminlte.min.js"></script>
    <!-- Summernote -->
    <script src="~/dist/js/summernote-bs4.min.js"></script>
    <script>
$(function () {

    //Add text editor

    $('#compose-textarea').summernote()

  })</script>

</body>
