
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Ticari Otomasyon</title>
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=latin-ext" rel="stylesheet">
    <script src="https://kit.fontawesome.com/c9a019f83a.js" crossorigin="anonymous"></script>
    <link href="~/weblogin/css/style.css" rel="stylesheet" />
    <link href="~/weblogin/css/font-awesome.css" rel="stylesheet" />
    <link href="~/dist/css/popup-box.css" rel="stylesheet" />
    <style>
        body {
            padding: 3em 0;
            background: url(../weblogin/images/arkaplan.jpg);
            background-attachment: fixed;
            background-size: cover;
        }
    </style>
</head>

<body>

    
    <section class="register">
        <div class="header">
            <div class="logo">
                <a href="#">Giriş Formu</a>
            </div>
            <div class="social">
                <ul>
                    <li><a href="https://github.com/DifferenTismail" target="_blank"><span class="fa fa-github"></span></a></li>
                    <li><a href="#"><span class="fa fa-twitter" target="_blank"></span></a></li>
                    <li><a href="https://www.linkedin.com/in/ismail-baran-karasu/" target="_blank"><span class="fa fa-linkedin"></span></a></li>
                    <li><a href="mailto:ismailbaran04@gmail.com" target="_blank"><span class="fa fa-google-plus"></span></a></li>
                </ul>
            </div>
            <div class="clear"></div>
        </div>

        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <p>@*Proje Geliştirme*@</p>
                    <h1>Online</h1>
                    <h2>Ticari Otomasyon</h2>
                    <p>
                        Admin personel kişisel sayfası ve müşteri kişisel sayfası olmak üzere 3 tane temel yapımız bulunmaktadır.Giriş yapmak istediğiniz yetki durumunuza göre sağ taraftan ilgili menüyü seçin.
                    </p>
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog2">Kayıt ol »</a>
                </div>
                <div class="register-in middle">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog">Müşteri Girişi »</a>
                </div>
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog1">Personel Girişi »</a>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
        <!-- copyright -->
        <p class="agile-copyright">© 2023 Project. Tüm Hakları Saklıdır.</p>
        <!-- //copyright -->
    </section>

    <div class="pop-up">
        <div id="small-dialog" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Müşteri Girişi</h3>
                    <span class="fa fa-lock"></span>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        @using(Html.BeginForm("CariLogin1", "Login", FormMethod.Post)) {
                            <input type="text" class="name" name="CariMail" Placeholder="Mail Adresiniz" required="" />
                            <input type="password" class="password" name="CariSifre" Placeholder="Şifre" required="" />
                            <input type="submit" value="Giriş Yap">
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="pop-up">
        <div id="small-dialog1" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Personel Girişi</h3>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                        {
                            <input type="text" class="name" name="KullaniciAd" Placeholder="Kullanıcı Adı" required="" />
                            <input type="password" class="password" name="Sifre" Placeholder="Şifre" required="" />
                            <input type="submit" value="Giriş Yap">
                        }
                        </div>
                </div>
            </div>

        </div>
    </div>

    <div class="pop-up">
        <div id="small-dialog2" class="mfp-hide book-form">

            @Html.Action("Partial1", "Login")

        </div>
    </div>

    <script type="text/javascript" src="~/dist/js/jquery-2.1.4.min.js"></script>

    <script src="~/dist/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.popup-with-zoom-anim').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });

        });
    </script>

</body>

</html>