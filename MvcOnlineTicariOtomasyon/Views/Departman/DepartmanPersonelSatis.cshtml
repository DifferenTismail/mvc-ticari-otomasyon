@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departman Personel Satis</h2>
<br /> 
<ol class="breadcrumb" mb-4>
    <li class="breadcrumb-item active">Personel Adı : @ViewBag.dpers</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Ürün</th>
        <th>Müşteri</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var x in Model) {
    <tr>
         <td>@x.Urun.UrunAd</td>
         <td>@x.Cariler.CardiAd @x.Cariler.CariSoyad</td>
         <td>@x.Fiyat ₺</td>
         <td>@x.Adet</td>
         <td>@x.ToplamTutar ₺</td>
         <td>@x.Tarih</td>
         <td><a href="#" class="btn btn-default" style="background-color:dodgerblue;color:white;">Yazdır</a></td>
    </tr>
    }
</table>